@model contact.ViewModels.ItemsViewModel
@using System.Text.Json
@{
    ViewData["Title"] = "Айтемы";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(".all").on("change", function () {
            var groupId = $(this).data('id');
            $('.one[data-id="' + groupId + '"]').prop("checked", this.checked);
        });

        $(".one").on("change", function () {
            var groupId = $(this).data('id');
            var allChecked = $('.one[data-id="' + groupId + '"]:not(:checked)').length == 0;
            $('.all[data-id="' + groupId + '"]').prop("checked", allChecked);
        });
    });
</script>
<div>
    <div class="text-center">
        <button class="btn btn-primary mx-auto my-2" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            @Localizer["Collection"]
        </button>
        <div class="collapse" id="collapseExample">
            <div class="card card-body text-center">
                <h5><b>@Localizer["Name"]:</b> @Model.Collection.Topic</h5>
                <h5><b>@Localizer["Theme"]:</b> @Model.Collection.Theme</h5>
                @if (Model.Collection.Img != "")
                {
                    <img style="width:100%;max-width:900px;max-height:500px;" class="mx-auto rounded shadow mb-3" src="@Model.Collection.Img" />
                }
                <div style="max-height:500px;overflow-y:auto;">
                    <p><b>@Localizer["Description"]:</b> <markdown>@Model.Collection.Description</markdown></p>
                </div>
                <form>
                    <button asp-controller="Items" asp-action="EditCollection" type="submit" class="btn btn-primary mt-2" name="Id" value="@Model.Collection.Id">
                        @Localizer["EditeCollection"]
                    </button>
                </form>
            </div>
        </div>
    </div>
    <form asp-action="Delete">
        <div class="table-responsive">
            <table id="myTable" class="table table-hover table-responsive-sm">
                <thead>
                    <tr>
                        <th scope="col"><input type="checkbox" class="all" data-id="d1" title="Choose evrything"></th>
                        <th scope="col" class="text-truncate" onclick="sortTable(1)">@Localizer["Name"]<i class="fas fa-sort"></i></th>
                        <th scope="col" class="text-truncate" onclick="sortTable(2)">@Localizer["Tag"]<i class="fas fa-sort"></i></th>
                        <th scope="col" class="text-truncate" onclick="sortTable(3)">@Localizer["Email"]<i class="fas fa-sort"></i></th>
                        @{
                            var quote = 4;

                            @foreach (var item in JsonSerializer.Deserialize<Dictionary<string, string[]>>(Model.Collection.Fields))
                            {

                                @if (item.Value.Length != 0)
                                {
                                    @foreach (var field in item.Value)
                                    {
                                        <th scope="col" class="text-truncate" onclick="sortTable(@quote, '@item.Key')">@field<i class="fas fa-sort"></i></th>
                                        quote += 1;
                                    }
                                }
                            }
                        }
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model.Items)
                    {
                    <tr style="max-height:18rem;">
                        <td>
                            <input type="checkbox" name="selectedUsers"
                                   id="@item.Id" value="@item.Id"
                                   class="one" data-id="d1">
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Tag</td>
                        <td>@item.Email</td>

                        @foreach (var fields in JsonSerializer.Deserialize<Dictionary<string, string[]>>(item.Fields))
                        {

                            @if (fields.Value.Length != 0)
                            {
                                @for (int i = 1; i < fields.Value.Count(); i += 2)
                                {
                                    @if (fields.Key != "bool")
                                    {
                                        <td><div style="max-height:500px;overflow-y:auto;">@fields.Value.ElementAt(i)</div></td>
                                    }
                                    @if (fields.Key == "bool")
                                    {
                                        <td>
                                            <input type="checkbox" @if (fields.Value.ElementAt(i) == "on") { @: checked
                                                   } disabled />
                                        </td>
                                    }
                                }
                            }
                        }
                    <td>
                        <div class="btn-group-vertical">
                            @if (Model.status == "true")
                            {
                                <button class="btn btn-secondary" asp-controller="Items" asp-action="EditItem" asp-route-id="@item.Id">@Localizer["EditItem"]</button>
                            }
                            <button class="btn btn-secondary" asp-controller="Items" asp-action="Item" asp-route-id="@item.Id">@Localizer["Item"]</button>
                        </div>
                    </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model.Collection.Email == User.Identity.Name || Model.status == "true")
        {
            <div class="row justify-content-center mt-3">
                <button class="btn btn-primary mr-1" type="submit" value="submit">@Localizer["Delete"]</button>
                <button class="btn btn-primary ml-1" asp-action="CreateItem" asp-route-Topic="@Model.Collection.Topic" asp-route-Email="@Model.Collection.Email" asp-route-IdCollection="@Model.Collection.Id" asp-route-Fields="@Model.Collection.Fields">@Localizer["CreateItem"]</button>
            </div>
        }
    </form>
</div>


<script src="~/js/sort.js" type="text/javascript"></script>