@model contact.Models.Collect
<script src="~/js/addFieldScript.js"></script>
<h1>@Localizer["Edit"]</h1>
<form asp-action="EditSaveCollection" method="post">
    <input type="hidden" asp-for="@Model.Id" name="Id" />
    <div class="row justify-content-center">
        <div class="form-group col-lg-3 col-md-5">
            <label for="recipient-name" class="col-form-label">@Localizer["Topic"]</label>
            <input type="text" name="Topic" class="form-control @if (Context.Request.Cookies["theme"] == "dark") {@:border-0 text-light" style="background:rgb(83,129,176);
                                                        }" id="recipient-name" value="@Model.Topic">
        </div>
        <div class="form-group col-lg-3 col-md-5">
            <label for="message-text" class="col-form-label">@Localizer["Theme"]</label>
            <select name="Theme" class="form-control @if (Context.Request.Cookies["theme"] == "dark") {@:border-0 text-light" style="background:rgb(83,129,176);
                                                        }" id="message-text" value="@Model.Theme">
                <option value="Alcohol">@Localizer["Alcohol"]</option>
                <option value="Cars">@Localizer["Cars"]</option>
                <option value="Guns">@Localizer["Guns"]</option>
                <option value="Phones">@Localizer["Phones"]</option>
            </select>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-lg-7 col-md-7 text-center" id="cartinka">
            @if (Model.Img != "")
            {
                <img style="width:100%;max-width:900px;max-height:500px;" id="cartinka" class="mx-auto rounded shadow mb-3" src="@Model.Img" />
            }
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-lg-3 col-md-4">
            <input type="text" style="display : none;" id="imgur_link" name="img" value="@Model.Img" />
            <div class="custom-file ">
                <input type="file" class="custom-file-input @if (Context.Request.Cookies["theme"] == "dark") {@:border-0 text-light" style="background:rgb(83,129,176);
                                                        }" value="@Model.Img" onchange="upload(this.files[0])">
                <label class="custom-file-label text-truncate @if (Context.Request.Cookies["theme"] == "dark") {@:border-0 text-light" style="background:rgb(83,129,176);
                                                        }" for="customFile" id="Label">@Localizer["Upload"]</label>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="form-group col-lg-5 col-md-10">
            <label for="message-text" class="col-form-label">@Localizer["Description"]</label>
            <textarea name="Description" class="form-control @if (Context.Request.Cookies["theme"] == "dark") {@:border-0 text-light" style="background:rgb(83,129,176);min-height:200px;"
                                                        } 
                                                        else {@:" style="min-height:200px;"
                                                        }  id="message-text">@Model.Description</textarea>
        </div>
    </div>
    <div class="row justify-content-center">
        <button class="btn btn-dark">@Localizer["Save"]</button>
    </div>
</form>