<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Task №3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css" />
    <link href="~/fontawesome-free-5.12.1-web/css/all.css" rel="stylesheet" />
    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.ui/1.10.3/jquery-ui.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script type="text/javascript">
        function Search() {
            setTimeout(SearchTm,0);
        }
        function SearchTm() {
            console.clear();
            var commentary = $('#Commentary').val();
            var topic = $('#Topic').val();
            var collect = $('#Collect').val();
            $.ajax({
                url: '@Url.Action("Search", "Items")?Search=' + $('#search').val(),
                async: true,
                cache: false,
                success: function (data) {
                    var json = JSON.parse(data);
                    var string = '';
                    $.each(json[0], function (k, val) {
                        string += '<div class="row"><div class="col py-1 text-truncate d-inline-block">' + commentary +'<a href="Items/Item/' + val.ItemId + '">' + val.Comment + '</a></div></div>';
                    });
                    $.each(json[1], function (k, val) {
                        string += '<div class="row"><div class="col py-1 text-truncate d-inline-block">' + collect + '<a href="Items/CollectionsItems/' + val.Id + '">' + val.Topic + '</a></div></div>';
                    });
                    $.each(json[2], function (k, val) {
                        string += '<div class="row"><div class="col py-1 text-truncate d-inline-block">' + topic + '<a href="Items/Item/' + val.Id + '">' + val.Name + '</div></div>';
                    });

                    $('#searchDiv').empty();
                    $('#searchDiv').append(string);
                }
            });
        }
    </script>
</head>
<body>
    <input type="hidden" id="Commentary" value="@Localizer["Commentray"]: " />
    <input type="hidden" id="Topic" value="@Localizer["Topic"]: " />
    <input type="hidden" id="Collect" value="@Localizer["Collect"]: " />
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
            <a class="navbar-brand mb-2" asp-area="" asp-controller="Home" asp-action="Index">Курсач</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">@Localizer["Login"]</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="Account" asp-action="Register">@Localizer["Register"]</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="nav-link" asp-controller="ProfileCollection" asp-action="Profile" asp-route-userEmail="@User.Identity.Name">@User.Identity.Name</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="Collections" asp-action="Logout">@Localizer["Logout"]</a>
                        </li>
                        <li>
                            <a class="nav-link text-truncate d-inline-block" asp-controller="Users" asp-action="Index">@Localizer["Usermanagment"]</a>
                        </li>
                    }
                </ul>
                <div class="input-group d-flex">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-white" id=""><i class="fas fa-search"></i></span>
                    </div>
                    <input type="search" placeholder="@Localizer["Search"]" onkeyup="Search()" onclick="Search()" id="search" class="form-control rounded-right">
                    <div id="searchDiv" class="container bg-white shadow text-dark rounded" style="display: block; position: absolute; z-index: 9999; margin-top:38px; overflow-y: scroll; max-width: inherit; max-height: 500px;"></div>
                </div>
                    @await Html.PartialAsync("_SelectLanguagePartial")
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="mt-5 pt-5">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
